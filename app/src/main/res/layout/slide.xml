<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main2"
    android:id="@+id/slidelinearlayout">

    <LinearLayout
        android:id="@+id/immagine"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_86sdp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/slideimg"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_alignBottom="@+id/immagine"
            android:layout_marginRight="@dimen/_50sdp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_47sdp"
            android:text="Senza nome"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tabella1"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_70sdp"
        android:layout_toEndOf="@+id/immagine"
        android:orientation="vertical">

        <TextView
            android:id="@+id/upperTableHeader"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/underline"
            android:fontFamily="@font/kotta_one"
            android:gravity="top"
            android:scrollbarSize="@dimen/_152sdp"
            android:text="Punteggio finale:"
            android:textColor="#0A3BCE"
            android:textSize="@dimen/_13sdp" />

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/tl"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_above="@+id/t2"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/_20sdp">

            <TableRow
                android:id="@+id/tr_item_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/table_row_bg"
                android:padding="2dp">

                <TextView
                    android:id="@+id/item_1"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell_bg"
                    android:paddingRight="10dp"
                    android:scrollbarSize="@dimen/_1sdp"
                    android:text="  Flessibilità"
                    android:textColor="#030101"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/f_item_1"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell_bg"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#070404"
                    android:textSize="@dimen/_10sdp" />
            </TableRow>

            <TableRow
                android:id="@+id/tr_item_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/table_row_bg"
                android:padding="2dp">

                <TextView
                    android:id="@+id/item_2"
                    android:layout_width="202dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell_bg"
                    android:paddingRight="10dp"
                    android:scrollbarSize="@dimen/_1sdp"
                    android:text="  Fluidità"
                    android:textColor="#070404"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/fl_item_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell_bg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#070404"
                    android:textSize="@dimen/_10sdp" />
            </TableRow>

            <TableRow
                android:id="@+id/tr_item_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/table_row_bg"
                android:padding="2dp">

                <TextView
                    android:id="@+id/item_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell_bg"
                    android:paddingRight="10dp"
                    android:scrollbarSize="@dimen/_1sdp"
                    android:text="  Originalità"
                    android:textColor="#070404"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/o_item_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell_bg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#070404"
                    android:textSize="@dimen/_10sdp" />
            </TableRow>

            <TableRow
                android:id="@+id/tr_item_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/table_row_bg"
                android:padding="2dp">

                <TextView
                    android:id="@+id/item_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell_bg"
                    android:paddingRight="10dp"
                    android:scrollbarSize="@dimen/_1sdp"
                    android:text="  Elaborazione"
                    android:textColor="#070404"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/el_item_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell_bg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#070404"
                    android:textSize="@dimen/_10sdp" />
            </TableRow>

            <TableRow
                android:id="@+id/tr_item_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/table_row_bg"
                android:padding="2dp">

                <TextView
                    android:id="@+id/item_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell_bg"
                    android:paddingRight="10dp"
                    android:scrollbarSize="@dimen/_1sdp"
                    android:text="  Titolo"
                    android:textColor="#070404"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/t_item_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell_bg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#070404"
                    android:textSize="@dimen/_10sdp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tabella2"
        android:layout_width="@dimen/_157sdp"
        android:layout_height="@dimen/_65sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_250sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_74sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lowerTableHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/underline"
            android:fontFamily="@font/kotta_one"
            android:text="Considerazioni aggiuntive:"
            android:textColor="#1D8314"
            android:textSize="@dimen/_13sdp" />

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/tl_2"
            android:layout_width="@dimen/_155sdp"
            android:layout_height="@dimen/_553sdp"
            android:layout_alignEnd="@+id/tl"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/_40sdp">

            <TableRow
                android:id="@+id/tr_item_6"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:background="@drawable/table_row_bg"
                android:padding="2dp">

                <TextView
                    android:id="@+id/t1_item_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell_bg"
                    android:paddingRight="10dp"
                    android:scrollbarSize="@dimen/_1sdp"
                    android:text="    Tempo di reazione"
                    android:textColor="#070404"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tempo_item_1"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell_bg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#070404"
                    android:textSize="@dimen/_10sdp" />
            </TableRow>

            <TableRow
                android:id="@+id/tr_item_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/table_row_bg"
                android:padding="2dp">

                <TextView
                    android:id="@+id/t2_item_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell_bg"
                    android:paddingRight="10dp"
                    android:scrollbarSize="@dimen/_1sdp"
                    android:text="    Tempo di completamento"
                    android:textColor="#070404"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tempo_item_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell_bg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#070404"
                    android:textSize="@dimen/_10sdp" />
            </TableRow>

            <TableRow
                android:id="@+id/tr_item_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/table_row_bg"
                android:padding="2dp"
                android:scrollbarSize="@dimen/_1sdp">

                <TextView
                    android:id="@+id/n_cancellature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell_bg"
                    android:paddingRight="10dp"
                    android:text="    Numero cancellature"
                    android:textColor="#070404"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/n_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell_bg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#070404"
                    android:textSize="@dimen/_10sdp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>